<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rljuduldoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivgambardoa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_makan"/>
                <TextView
                    android:id="@+id/tvjuduldoa"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:text="Doa Bangun Tidur"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:textSize="18sp"/>
                <ImageButton
                    android:id="@+id/ibcollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_toRightOf="@id/tvjuduldoa"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C0C0"/>
            <RelativeLayout
                android:id="@+id/rlisidoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tvdoaarab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doa_arab"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="10"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tvdoalatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doa_latin"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:maxLines="10"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tvdoaarab"
                    />

            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>